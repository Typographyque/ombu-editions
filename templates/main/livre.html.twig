{% extends 'base.html.twig' %}

{% block title %}{{ livre.title }}{% endblock %}

{% block body %}

    <!-- Header -->
    <header id="header" class="preview">
        <div class="inner">
            <div class="content">
                <h1><img class="logo" src="{{ asset('img/logo-ombu-editions-blanc.png') }}" alt="Ombú éditions" /></h1>
            </div>
            <a href="{{ path('home') }}" class="button hidden"><span>Accueil</span></a>
        </div>
    </header>

    <!-- Main -->
    <div id="preview" class="vertical">
        <div class="inner">
            <div class="image fit">
                <img src="/img/home/{{ livre.coverImage }}" alt="{{ livre.title }}" />
            </div>
            <div class="content">
                <header>
                    <h2>{{ livre.title }}</h2>
                </header>
                {{ livre.description | raw}}
            </div>
        </div>
        <a href="{{ path('livre', {id: suivant.id, slug: suivant.slug}) }}" class="nav previous"><span class="fa fa-chevron-left"></span></a>
        <a href="{{ path('livre', {id: suivant.id, slug: suivant.slug}) }}" class="nav next"><span class="fa fa-chevron-right"></span></a>
    </div>
{% endblock %}

